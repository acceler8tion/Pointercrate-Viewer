<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weakdemon_view"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/thumbnail_desc">

    </ImageView>

    <ImageView
        android:id="@+id/fake_playbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/playbtn_desc"
        android:src="@drawable/ic_baseline_play_arrow_24">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/demonTitle"
        android:textSize="40sp"
        android:fontFamily="@font/balsamiqsans_reg">

    </TextView>

</RelativeLayout>